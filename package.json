{
  "name": "alaric-toolkit",
  "displayName": "alaric-toolkit",
  "publisher": "AlaricWeb",
  "type": "module",
  "version": "2.0.1",
  "private": true,
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "icon": "resource/logo.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alaric8/vscode-toolkit.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-toolkit.showActiveFileInExplorer",
        "title": "target file",
        "icon": "resource/target.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-toolkit.showActiveFileInExplorer",
          "when": "view == workbench.explorer.fileView && editorIsOpen && resourceIsInWorkspace",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown --env.NODE_ENV production",
    "dev": "tsdown --watch ./src --env.NODE_ENV development",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.89.0",
    "reactive-vscode": "^0.3.2",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
